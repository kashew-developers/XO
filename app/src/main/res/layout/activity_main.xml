<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:orientation="vertical">


        <!-- Heading -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/x"
                android:textColor="#ffffff"
                android:textSize="75sp" />

            <TextView
                android:id="@+id/and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/and"
                android:textColor="#ffffff"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/o"
                android:textColor="#ffffff"
                android:textSize="75sp" />

        </LinearLayout>

        <!-- Single Player Options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/mode_style"
            android:onClick="onSinglePlayerClicked"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="20dp"
                android:src="@drawable/ic_single_white_24dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/singlePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="#00000000"
                android:onClick="onSinglePlayerClicked"
                android:padding="0dp"
                android:text="@string/singlePlayer"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>


        <!-- Multi Player Options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/mode_style"
            android:onClick="onMultiPlayerClicked"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="20dp"
                android:src="@drawable/ic_multi_white_24dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <Button
                android:id="@+id/multiPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="#00000000"
                android:onClick="onMultiPlayerClicked"
                android:padding="0dp"
                android:text="@string/multiPlayer"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>