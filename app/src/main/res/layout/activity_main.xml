<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:orientation="vertical">


        <!-- Heading -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/x"
                android:textColor="#ffffff"
                android:textSize="75sp" />

            <TextView
                android:id="@+id/and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/and"
                android:textColor="#ffffff"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/o"
                android:textColor="#ffffff"
                android:textSize="75sp" />

        </LinearLayout>

        <!-- Single Player Options -->
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/mode_style"
            android:onClick="onSinglePlayerClicked"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="15dp"
                android:src="@drawable/ic_single_white_24dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/singlePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:onClick="onSinglePlayerClicked"
                android:padding="0dp"
                android:text="@string/singlePlayer"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>


        <!-- Multi Player Options -->
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/mode_style"
            android:onClick="onMultiPlayerClicked"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="15dp"
                android:src="@drawable/ic_multi_white_24dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/multiPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:onClick="onMultiPlayerClicked"
                android:padding="0dp"
                android:text="@string/multiPlayer"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>


        <!-- Play with Friends Options -->
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/mode_style"
            android:onClick="onPlayWithFriendsClicked"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="15dp"
                android:src="@drawable/add_person_logo" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/playWithFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:onClick="onPlayWithFriendsClicked"
                android:padding="0dp"
                android:text="@string/playWithFriend"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="onAboutClicked"
        android:src="@drawable/ic_info_white_24dp" />

</RelativeLayout>